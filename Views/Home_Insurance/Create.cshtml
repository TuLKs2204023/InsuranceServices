@model test0000001.Models.Home_Insurance


@{
    ViewData["Title"] = "Create";
}


<div class="container w-75">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Register For Private Information</h4>
            <h5 class="text-danger">@ViewBag.MsgError</h5>
            <h5 class="text-success">@ViewBag.MsgSuccess</h5>
        </div>
        <div class="card-content">
            <div class="card-body">
                <form asp-action="Create" asp-controller="Home_Insurance" method="post">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="first-name-vertical">Name</label>
                                    <input asp-for="Name" type="text" id="first-name-vertical" class="form-control" >
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address" class="control-label"></label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Gmail" class="control-label"></label>
                                <input asp-for="Gmail" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>What year was the building built?</label>
                                <input asp-for="YearBuilt" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>It is an apartment or private house?</label>
                                <div class="form-check">
                                    <input type="radio" asp-for="Structure" value="apartment" class="form-check-input" />
                                    <label class="form-check-label" for="Structure_Option1">Apartment</label>
                                </div>
                                <div class="form-check">
                                    <input type="radio" asp-for="Structure" value="private house" class="form-check-input" />
                                    <label class="form-check-label" for="Structure_Option2">Private house</label>
                                </div>
                                <!-- Thêm các tùy chọn khác nếu cần -->
                                <span asp-validation-for="Structure" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>How many floors does the building have?</label>
                                <input asp-for="NumberOfBasement" class="form-control" />
                                <span asp-validation-for="NumberOfBasement" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>What is the area of the building?</label>
                                <input asp-for="Area" class="form-control" />
                                <span asp-validation-for="Area" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>How long do you want the contract term? (in month) </label>
                                <select asp-for="DurationId" class="form-control" asp-items="ViewBag.DurationId"></select>
                            </div>
                            <div class="form-group">
                                <label>Please give me the paperwork information if possible? (Did you upload your file to Driver and paste it here?</label>
                                <input asp-for="LinkDriver" placeholder="Enter the housing profile link" class="form-control" />
                                <span asp-validation-for="LinkDriver" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <div class="col-12 d-flex justify-content-center">
                                    <button type="submit" class="btn btn-primary me-1 mb-1">Submit</button>
                                    <button type="reset" class="btn btn-light-secondary me-1 mb-1">Reset</button>
                                </div>
                             </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



